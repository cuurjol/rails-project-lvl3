= search_form_for(search, url: admin_categories_path, method: :get) do |f|
  .card.text-dark.bg-light.mb-4
    .card-header
      h5.mt-2 = t('.filters_title')
    .card-body
      = f.input(filter_method_for(:name, :string), label: Category.human_attribute_name(:name),
              wrapper_html: { class: 'my-2' }, label_html: { class: 'fst-italic' }, required: false) do
        .row
          .col-sm-6.col-lg-12.mb-2.mb-sm-0.mb-lg-2
            = f.select(filter_method_for(:name, :string), predicate_choices_for(:name, :string),
                    { include_blank: true }, { class: 'form-select', name: nil,
                            data: { field: :name, type: :string } })
          .col-sm-6.col-lg-12.mt-2.mt-sm-0.mt-lg-2
            = f.text_field(filter_method_for(:name, :string), { class: 'form-control' })
    .card-footer
      .custom-form-actions
        = f.button(:submit, t('.submit'), class: 'btn-success mb-2 mb-sm-0')
        = link_to(t('.clear_filter_link'), admin_categories_path, class: 'btn btn-danger mt-2 mt-sm-0')
